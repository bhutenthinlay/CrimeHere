<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/selector_background_empty" >

    <ImageView
        android:id="@+id/image123"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/crimehere"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" />

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <com.csform.android.uiapptemplate.font.RobotoTextView
        android:id="@+id/textTitleKyakpa"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:textColor="#F44336"
        android:textSize="18dp" />

    
    <com.csform.android.uiapptemplate.font.RobotoTextView
        android:id="@+id/textType"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:textColor="#000000"
        android:textSize="17dp" />
    
    
    <com.csform.android.uiapptemplate.font.RobotoTextView
        android:id="@+id/textDate"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:textColor="#000000"
        android:textSize="10dp" />
    </LinearLayout>
    
</LinearLayout>